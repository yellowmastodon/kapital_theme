{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 2,
  "name": "kapital/secondary-title",
  "version": "0.1.0",
  "title": "Podnadpis článku",
  "category": "text",
  "icon": "heading",
  "description": "Podnadpis sa zobrazí na stránke článku a vo vyhľadávaní",
  "attributes": {
    "textAlign": {
      "type": "string",
      "default": "center"
    },
    "postId": {
      "type": "integer"
    },
    "is_query": {
      "type": "boolean",
      "default": false
    }
  },
  "supports": {
    "html": false,
    "spacing": {
      "padding": true,
      "margin": true
    }
  },
  "usesContext": [
    "postType",
    "postId",
    "queryId"
  ],
  "textdomain": "kapital",
  "editorScript": "file:./index.js"
}